    <script>
        $(document).ready(function () {
            var $dragging = null;

            $(document.body).on("mousemove", function (e) {
                if ($dragging) {
                    $dragging.offset({
                        top: e.pageY - 100,
                        left: e.pageX - 100
                    });
                }
            });

            $(document.body).on("mousedown", ".unselectable", function (e) {
                $dragging = $(".unselectable");
            });

            $(document.body).on("mouseup", function (e) {
                $dragging = null;
            });
        });
    </script>

